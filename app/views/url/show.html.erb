<%= turbo_frame_tag "new_short_url" do %>
  <div id="<%= dom_id @short_url %>" class="flex flex-col w-full py-4">
    <% target_url = @short_url.target_url %>

    <label for="<%= dom_id @short_url, :target %>" class="py-4">
      <span class="text-xl font-semibold">Your URL</span>
      <div id="<%= dom_id @short_url, :target %>">
        <%= link_to target_url.external_url, target_url.external_url, target: "_blank", class: "text-sky-600" %>
      </div>
    </label>
    
    <label for="<%= dom_id @short_url, :shorten %>" class="py-4">
      <span class="text-xl font-semibold">Shortened URL</span>
      <div class="font-light">
        <%= target_url.title %>
      </div>
      <span id="<%= dom_id @short_url, :shorten %>">
        <%= link_to slug_url(slug: @short_url.slug), slug_url(slug: @short_url.slug), target: "_blank", class: "text-sky-600"%>
      </span>
    </label>

    <div class="pt-8">
      <%= link_to "Shorten another", new_url_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>